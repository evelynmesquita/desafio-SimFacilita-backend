{
  "name": "desafio-simfacilita-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/server.ts",
    "start": "prisma migrate deploy && node dist/src/server.js",
    "test": "dotenv -e .env.test prisma migrate deploy & dotenv -e .env.test jest -- -i",
    "test:coverage": "npm run test:load-envs -- jest -- --coverage --runInBand",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "dev:migration:run": "npm run dev:load-envs prisma migrate deploy",
    "dev:migration:generate": "npm run dev:load-envs prisma migrate dev",
    "test:load-envs": "dotenv -e .env.test",
    "dev:load-envs": "dotenv -e .env",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "author": "Evelyn Mesquita",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.0",
    "prisma": "^5.12.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.7.4",
    "jest": "^29.7.0",
    "joi": "^17.12.3",
    "uuid": "^9.0.1"
  }
}
